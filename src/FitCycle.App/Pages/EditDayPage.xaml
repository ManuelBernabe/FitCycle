<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitCycle.App.Pages.EditDayPage">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label x:Name="DayTitle" Style="{StaticResource SubHeadline}" />
            <Label x:Name="SubtitleLbl" FontSize="14" TextColor="Gray" />

            <VerticalStackLayout x:Name="GroupsContainer" Spacing="8" />

            <Label x:Name="StatusLbl" TextColor="Gray" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
