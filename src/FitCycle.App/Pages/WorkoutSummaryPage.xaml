<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitCycle.App.Pages.WorkoutSummaryPage"
             Title="Resumen">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16" MaximumWidthRequest="500" HorizontalOptions="Center">

            <!-- Header -->
            <Label x:Name="CompletedLabel" Text="Entrenamiento completado"
                   FontSize="24" FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="#28a745" />

            <!-- Summary card -->
            <Frame Padding="16" CornerRadius="12">
                <VerticalStackLayout Spacing="8">
                    <Label x:Name="DayLabel" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <BoxView HeightRequest="1" Color="LightGray" />
                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" ColumnSpacing="8" RowSpacing="4">
                        <Label x:Name="DurationTitle" Text="DuraciÃ³n" FontSize="12" TextColor="Gray" HorizontalTextAlignment="Center" Grid.Column="0" />
                        <Label x:Name="ExercisesTitle" Text="Ejercicios" FontSize="12" TextColor="Gray" HorizontalTextAlignment="Center" Grid.Column="1" />
                        <Label x:Name="TotalSetsTitle" Text="Series totales" FontSize="12" TextColor="Gray" HorizontalTextAlignment="Center" Grid.Column="2" />
                        <Label x:Name="DurationLabel" FontSize="22" FontAttributes="Bold" HorizontalTextAlignment="Center" Grid.Column="0" Grid.Row="1" />
                        <Label x:Name="ExerciseCountLabel" FontSize="22" FontAttributes="Bold" HorizontalTextAlignment="Center" Grid.Column="1" Grid.Row="1" />
                        <Label x:Name="TotalSetsLabel" FontSize="22" FontAttributes="Bold" HorizontalTextAlignment="Center" Grid.Column="2" Grid.Row="1" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Weekly chart -->
            <Frame Padding="16" CornerRadius="12">
                <VerticalStackLayout Spacing="8">
                    <Label x:Name="WeeklyTitle" Text="Entrenamientos esta semana" FontSize="16" FontAttributes="Bold" />
                    <VerticalStackLayout x:Name="WeeklyChart" Spacing="6" />
                </VerticalStackLayout>
            </Frame>

            <!-- Exercise list -->
            <Frame Padding="16" CornerRadius="12">
                <VerticalStackLayout Spacing="6">
                    <Label x:Name="ExercisesDoneTitle" Text="Ejercicios realizados" FontSize="16" FontAttributes="Bold" />
                    <VerticalStackLayout x:Name="ExerciseList" Spacing="4" />
                </VerticalStackLayout>
            </Frame>

            <Button x:Name="BackBtn" Text="Volver a Rutinas"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12"
                    Clicked="OnBackClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
